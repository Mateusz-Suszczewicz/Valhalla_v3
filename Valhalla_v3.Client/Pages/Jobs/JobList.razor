@page "/jobs"
@using Valhalla_v3.Shared.ToDo
@rendermode InteractiveAuto
@inject NavigationManager navigation
@inject HttpClient Http

<PageTitle>Zadania</PageTitle>


<MudDropContainer T="Job" Items="_items" ItemsSelector="@((item,dropzone) => item.IsCompleted == dropzone)" ItemDropped="ItemUpdated" Class="d-flex flex-wrap flex-grow-1">
    <ChildContent>
        <MudDropZone T="Job" Identifier=false Class="mud-background-gray pa-6 ma-8 flex-grow-1 rounded">
            <MudText Typo="Typo.h6" Class="mb-4">Do zrobienia</MudText>
        </MudDropZone>
        <MudDropZone T="Job" Identifier=true Class="mud-background-gray pa-6 ma-8 flex-grow-1 rounded">
            <MudText Typo="Typo.h6" Class="mb-4">Skończone</MudText>
        </MudDropZone>
    </ChildContent>
    <ItemRenderer>
        <MudPaper Elevation="25" Class="pa-4 my-4">@context.Name</MudPaper>
    </ItemRenderer>
</MudDropContainer>

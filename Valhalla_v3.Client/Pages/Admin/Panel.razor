@page "/admin"
@using Valhalla_v3.Client.Components
@using Valhalla_v3.Client.Pages.Cars
@using Valhalla_v3.Shared.CarHistory
@using Valhalla_v3.Shared.ToDo
@rendermode InteractiveAuto
@inject HttpClient Http
@inject NavigationManager navigation

<PageTitle>Panel administratora</PageTitle>

<h1>Panel administratora</h1>
@if (!string.IsNullOrEmpty(ErrorMessage))
{
    <div class="alert alert-danger">
        @ErrorMessage
    </div>
}

<Tabs>
    <Tab Title="Słowniki" IsActive="true">
        <Content>
            <Tabs>
                <Tab Title="Projekty" IsActive="true">
                    <Content>
                        <table class="mt-2 table-dark table-hover table">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Nazwa</th>
                                    <th scope="col">Akcje</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach(var project in projects)
                                {
                                    <tr>
                                        <th scope="row">@(projects.IndexOf(project) + 1)</th>
                                        <td>@project.Name</td>
                                        <td>
                                            <button class="btn btn-danger" @onclick="() => DeleteAsync<Project>(project.Id)"><i class="bi bi-trash-fill"></i></button>
                                            <button class="btn btn-warning" @onclick="() => OpenProject(project.Id)"><i class="bi bi-eye-fill"></i></button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <div class="fixed-buttons">
                            <button class="btn btn-success" @onclick="() => OpenProject(0)">Dodaj nowy projekt</button>
                        </div>
                        <div class="modal fade @(isProjectOpen ? "show" : "")" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true" style="display:@(isProjectOpen ? "block" : "none");">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header modal-header-moje">
                                        <h5 class="modal-title" id="exampleModalLabel">Stacja paliw</h5>
                                        <button class="btn-close" @onclick="CloseProject"></button>
                                    </div>
                                    <div class="modal-body modal-body-moje">
                                        <Valhalla_v3.Client.Pages.Jobs.ProjectModal ProjctSubmit="HandleProjectSubmit" project="project" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </Content>
                </Tab>
                <Tab Title="Stacje paliw">
                    <Content>
                        <table class="mt-2 table-dark table-hover table">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Nazwa</th>
                                    <th scope="col">Opis</th>
                                    <th scope="col">Akcje</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var gasStation in gasStations)
                                {
                                    <tr>
                                        <th scope="row">@(gasStations.IndexOf(gasStation)+1)</th>
                                        <td>@gasStation.Name</td>
                                        <td>@gasStation.Description</td>
                                        <td>
                                            <button class="btn btn-danger" @onclick="() => DeleteAsync<GasStation>(gasStation.Id)"><i class="bi bi-trash-fill"></i></button>
                                            <button class="btn btn-warning" @onclick="() => OpenGasStation(gasStation.Id)"><i class="bi bi-eye-fill"></i></button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <div class="fixed-buttons">
                            <button class="btn btn-success" @onclick="() => OpenGasStation(0)">Dodaj nową stację</button>
                        </div>
                        <div class="modal fade @(isGasStationOpen ? "show" : "")" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true" style="display:@(isGasStationOpen ? "block" : "none");">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header modal-header-moje">
                                        <h5 class="modal-title" id="exampleModalLabel">Stacja paliw</h5>
                                        <button class="btn-close" @onclick="CloseGasStation"></button>
                                    </div>
                                    <div class="modal-body modal-body-moje">
                                        <GasStationAddModal StationSubmit="HandleGasStationSubmit" gasStation="gasStation" />
                                    </div>
                                </div>
                            </div>
                        </div>

                    </Content>
                </Tab>
                <Tab Title="Mechanicy">
                    <Content>
                        <table class="mt-2 table-dark table-hover table">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Nazwa</th>
                                    <th scope="col">Opis</th>
                                    <th scope="col">Akcje</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var mechanic in mechanics)
                                {
                                    <tr>
                                        <th scope="row">@(mechanics.IndexOf(mechanic) + 1)</th>
                                        <td>@mechanic.Name</td>
                                        <td>@mechanic.Description</td>
                                        <td>
                                            <button class="btn btn-danger" @onclick="() => DeleteAsync<Mechanic>(mechanic.Id)"><i class="bi bi-trash-fill"></i></button>
                                            <button class="btn btn-warning" @onclick="() => OpenMechanic(mechanic.Id)"><i class="bi bi-eye-fill"></i></button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <div class="fixed-buttons">
                            <button class="btn btn-success" @onclick="() => OpenMechanic(0)">Dodaj nowego mechanika</button>
                        </div>
                        <div class="modal fade @(isMechanicOpen ? "show" : "")" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true" style="display:@(isMechanicOpen ? "block" : "none");">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header modal-header-moje">
                                        <h5 class="modal-title" id="exampleModalLabel">Mechanik</h5>
                                        <button type="button" class="btn-close" @onclick="CloseMechanic"></button>
                                    </div>
                                    <div class="modal-body modal-body-moje">
                                        <MechanicAddModal MechanicSubmit="HandleMechanicSubmit" mechanic="mechanic"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </Content>
                </Tab>
                <Tab Title="Operatorzy">
                    <Content>
                        <table class="mt-2 table-dark table-hover table">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Imię</th>
                                    <th scope="col">Akcje</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var oper in operators)
                                {
                                    <tr>
                                        <th scope="row">@(operators.IndexOf(oper) + 1)</th>
                                        <td>@oper.Name</td>
                                        <td>
                                            <button class="btn btn-danger" @onclick="() => DeleteAsync<Operator>(oper.Id)"><i class="bi bi-trash-fill"></i></button>
                                            <button class="btn btn-warning" @onclick="() => OpenOperator(oper.Id)"><i class="bi bi-eye-fill"></i></button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <div class="fixed-buttons">
                            <button class="btn btn-success" @onclick="() => OpenOperator(0)">Dodaj nowego operatora</button>
                        </div>
                        <div class="modal fade @(isOperatorOpen ? "show" : "")" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true" style="display:@(isOperatorOpen ? "block" : "none");">
                            <OperatorModal OperSubmit="HandleOperatorSubmit" OnClose="CloseOperators" oper="oper"></OperatorModal>
                        </div>
                    </Content>
                </Tab>
            </Tabs>
        </Content>
    </Tab>
</Tabs>
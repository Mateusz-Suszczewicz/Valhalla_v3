@page "/fees/{Id:int}"
@rendermode InteractiveAuto
@inject NavigationManager NavManager
<PageTitle>Opłaty</PageTitle>

<div class="container-fluid text-center">
    <div class="row">
        <h1>Opłaty</h1>
    </div>
    <div class="row">
        <ul class="nav nav-tabs">
            <li class="nav-item">
                <a class="nav-link @(Id != DateTime.Now.Year ? "disabled" : "") @(activeTab == Tabs.currentMonth ? "active" : "")" @onclick="() => SelectTab(Tabs.currentMonth)">Aktualny miesiąc</a>
            </li>
            <li class="nav-item">
                <a class="nav-link @(Id != DateTime.Now.Year ? "disabled" : "") @(activeTab == Tabs.nextMonth ? "active" : "")" @onclick="() => SelectTab(Tabs.nextMonth)">Przyszły miesiąc</a>
            </li>
            <li class="nav-item">
                <a class="nav-link @(activeTab == Tabs.currentYear ? "active" : "")" @onclick="() => SelectTab(Tabs.currentYear)">Zestawienie roczne</a>
            </li>
        </ul>
    </div>
</div>


@if (activeTab == Tabs.currentMonth)
{
    <ComparisonCurrentMonth Month=@(DateTime.Now.Month)></ComparisonCurrentMonth>
}
@if (activeTab == Tabs.nextMonth)
{
    <ComparisonCurrentMonth Month=@(DateTime.Now.Month+1)></ComparisonCurrentMonth>
}
@if (activeTab == Tabs.currentYear)
{
    <ComparisonYear></ComparisonYear>
}
